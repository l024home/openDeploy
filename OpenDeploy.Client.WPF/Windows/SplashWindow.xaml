<Window
    x:Class="OpenDeploy.Client.Windows.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenDeploy.Client.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SplashWindow"
    Width="1200"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas>
        <Image
            x:Name="SplashImage"
            Canvas.Left="150"
            Canvas.Top="200"
            Source="/Resources/Images/AutoDeploy.png"
            Stretch="None" />
    </Canvas>
</Window>
